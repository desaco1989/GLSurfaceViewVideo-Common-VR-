<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asha.md360player4android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DemoActivity" android:configChanges="screenSize|orientation" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!---landscape portrait  -->
        <activity android:label="IjkPlayerDemoActivity" android:name=".IjkPlayerDemoActivity" android:screenOrientation="portrait" android:configChanges="screenSize|orientation" />
        <activity android:label="VideoPlayerActivity" android:name=".VideoPlayerActivity" android:screenOrientation="portrait" android:configChanges="screenSize|orientation" />
        <activity android:label="BitmapPlayerActivity" android:name=".BitmapPlayerActivity" android:screenOrientation="portrait" android:configChanges="screenSize|orientation" />

        <activity android:name="com.asha.md360player4android.commonVideo.MainActivity" android:screenOrientation="portrait"  />

    </application>

</manifest>
